<body>
    <div class="hearts" id="heartsContainer"></div>
    <div class="container">
        <h1>Will you be my Valentine, my love? ‚ù§Ô∏è</h1>
        <div class="buttons">
            <button id="yesBtn">Yes!</button>
            <button id="noBtn">No</button>
        </div>
        <div id="message"></div>
    </div>

    <!-- Tiny display for location (shows after fetch) -->
    <div id="visitorInfo"></div>

    <!-- Romantic background music -->
    <audio id="bgMusic" loop>
        <source src="https://www.bensound.com/bensound-music/bensound-love.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <!-- Unmute button -->
    <button id="soundToggle">üîá</button>

    <!-- Confetti library -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js"></script>

    <script>
        // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        // Fetch IP + Location (runs once on page load)
        // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        async function fetchVisitorInfo() {
            try {
                // Primary: ipapi.co (no key, detailed)
                let response = await fetch('https://ipapi.co/json/');
                
                // Fallback if needed: freeipapi.com
                // let response = await fetch('https://freeipapi.com/api/json');
                
                if (!response.ok) throw new Error('Geolocation fetch failed');
                
                const data = await response.json();

                // Log full data to console (for your testing)
                console.log('Visitor Info:', data);

                // Build nice message
                const city    = data.city    || 'Unknown city';
                const region  = data.region  || data.region_name || 'Unknown region';
                const country = data.country_name || data.country || 'Unknown country';
                const ip      = data.ip      || 'Hidden';

                const infoText = `Opened from ${city}, ${region} (${country}) ‚Ä¢ IP: ${ip.slice(0,7)}...`;

                // Show tiny message bottom-right
                const el = document.getElementById('visitorInfo');
                el.textContent = infoText;
                el.style.display = 'block';

            } catch (err) {
                console.error('Could not get visitor location:', err);
                // Optional: silent fail or show generic
                document.getElementById('visitorInfo').textContent = 'Location: Somewhere special ‚ù§Ô∏è';
                document.getElementById('visitorInfo').style.display = 'block';
            }
        }

        // Run when page is ready
        window.addEventListener('load', fetchVisitorInfo);

        // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        // Your original code continues below (hearts, buttons, music, confetti...)
        // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = ['‚ù§Ô∏è','üíï','üíñ','üíó','üíû'][Math.floor(Math.random()*5)];
           
            heart.style.left = Math.random() * 100 + 'vw';
            const size = Math.random() * 1.2 + 0.8;
            heart.style.fontSize = size + 'rem';
            heart.style.animationDuration = (Math.random() * 8 + 10) + 's';
            heart.style.animationDelay = Math.random() * 5 + 's';
            document.getElementById('heartsContainer').appendChild(heart);
            setTimeout(() => heart.remove(), 15000);
        }
        setInterval(createHeart, 400);
        for(let i = 0; i < 12; i++) {
            setTimeout(createHeart, i * 300);
        }

        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const message = document.getElementById('message');
        const bgMusic = document.getElementById('bgMusic');
        const soundToggle = document.getElementById('soundToggle');

        bgMusic.volume = 0.25;
        bgMusic.muted = true;
        bgMusic.play().catch(() => {
            document.body.addEventListener('click', () => {
                bgMusic.muted = false;
                bgMusic.play();
                soundToggle.textContent = 'üîä';
            }, { once: true });
        });

        soundToggle.addEventListener('click', () => {
            bgMusic.muted = !bgMusic.muted;
            if (!bgMusic.muted) bgMusic.play();
            soundToggle.textContent = bgMusic.muted ? 'üîá' : 'üîä';
        });

        noBtn.addEventListener('mouseover', () => {
            const container = document.querySelector('.container');
            const rect = container.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();
            const maxX = rect.width - btnRect.width - 40;
            const maxY = rect.height - btnRect.height - 40;
            noBtn.style.position = 'absolute';
            noBtn.style.left = Math.random() * maxX + 'px';
            noBtn.style.top = Math.random() * maxY + 'px';
        });

        yesBtn.addEventListener('click', () => {
            message.textContent = "Yayyyy! I love you so much! ü•∞üíó";
            message.classList.add('show');
            noBtn.style.display = 'none';
            bgMusic.volume = 0.4;
            bgMusic.muted = false;
            bgMusic.play();
            for(let i = 0; i < 25; i++) {
                setTimeout(createHeart, i * 80);
            }
            const heartInterval = setInterval(createHeart, 150);
            setTimeout(() => clearInterval(heartInterval), 5000);

            const count = 200;
            const defaults = {
                origin: { y: 0.7 },
                zIndex: 9999,
                disableForReducedMotion: true
            };
            function fireConfetti() {
                confetti({
                    ...defaults,
                    particleCount: count / 2,
                    angle: 60,
                    spread: 55,
                    startVelocity: 45,
                    colors: ['#ff3366', '#ff69b4', '#ffffff', '#ffb6c1', '#db7093']
                });
                confetti({
                    ...defaults,
                    particleCount: count / 2,
                    angle: 120,
                    spread: 55,
                    startVelocity: 45,
                    colors: ['#ff3366', '#ff69b4', '#ffffff', '#ffb6c1', '#db7093']
                });
            }
            fireConfetti();
            setTimeout(fireConfetti, 250);
            setTimeout(fireConfetti, 500);
            setTimeout(() => {
                confetti({
                    ...defaults,
                    particleCount: 120,
                    spread: 90,
                    origin: { y: 0.6 },
                    colors: ['#ff3366', '#ff69b4', '#ffffff', '#ffb6c1']
                });
            }, 800);
        });
    </script>
